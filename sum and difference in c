#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main()
{
    int a, b, c, d;
    float p, q, r, s;

    scanf("%d %d", &a, &b);
    scanf("%f %f", &p, &q);

    c = a + b;
    d = a - b;

    r = p + q;
    s = p - q;

    printf("%d %d\n", c, d);
    printf("%.1f %.1f", r, s);

    return 0;
}
